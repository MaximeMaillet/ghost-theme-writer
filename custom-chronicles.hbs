{{!< default}}

{{> header}}

<div class="container-fluid container-break-white">
    {{#post}}
        <div class="post post-chronicles">
            <div class="background-fluid-image background-fluid-image-header" style="background-image: url('{{feature_image}}')"></div>
            <div class="container custom-block container-on-background-image mb-5 pb-3">
                <div class="d-flex flex-row align-items-center justify-content-center post-titles">
                    <h1>{{title}}</h1>
                    {{> primary-author}}
                </div>
                <div class="d-flex flex-row post-excerpt">
                    <div class="resume">
                        {{> post-resume}}
                    </div>
                    <div class="ml-auto actions">
                        {{> chronicles-next}}
                    </div>
                </div>
                <hr class="post-split" />
                <div class="post-content">
                    {{content}}
                </div>
                <div class="d-flex flex-row post-next">
                    <div class="next-resume">
                        {{#has slug=slug tag="chronicles"}}
                            {{#foreach tags}}
                                {{^has slug="chronicles"}}
                                    {{> tags-resume resume_title="Une chronique tir√©e de :"}}
                                {{/has}}
                            {{/foreach}}
                        {{/has}}
                    </div>
                    <div class="ml-auto next-link">
                        {{> chronicles-next}}
                    </div>
                </div>
                <div class="post-footer">
                    {{> comment comment_id=comment_id}}
                </div>
            </div>
            <div class="background-fluid-image background-fluid-image-footer" style="background-image: url('{{feature_image}}')"></div>
        </div>
    {{/post}}
</div>
