{{!< default}}

{{> header}}

<div class="container-fluid">
    {{#post}}
        <div class="post top-icon chronicles">
            {{> background-fluid background=feature_image lg=true header=true}}
            <div class="container custom-round-block background-white-light container-on-background-image mb-5 pb-3">
                <div class="d-flex flex-row align-items-center justify-content-start post-titles">
                    <h1>{{title}}</h1>
                    {{> primary-author class="ml-auto"}}
                </div>
                <div class="d-flex flex-row post-excerpt">
                    <div class="resume">
                        {{> post-resume}}
                    </div>
                    <div class="ml-auto actions">
                        {{> chronicles-next}}
                    </div>
                </div>
                <hr class="post-split" />
                <div class="post-content">
                    {{content}}
                </div>
                <div class="d-flex flex-row post-next">
                    <div class="next-resume">
                        {{#has slug=slug tag="chronicles"}}
                            {{#foreach tags}}
                                {{^has slug="chronicles"}}
                                    {{> tags-resume resume_title="Une chronique tir√©e de :"}}
                                {{/has}}
                            {{/foreach}}
                        {{/has}}
                    </div>
                    <div class="next-link">
                        {{> chronicles-next}}
                    </div>
                </div>
                <div class="post-footer">
                    {{> comment comment_id=comment_id}}
                </div>
                {{> progress-bar }}
            </div>
            {{> background-fluid background=feature_image lg=true footer=true}}
        </div>
    {{/post}}
</div>
