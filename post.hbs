{{!< default}}

{{> header}}

<div class="container-fluid">
    {{#post}}
        <div class="post top-icon articles">
            <div class="background-fluid-image background-fluid-image-header" style="background-image: url('{{feature_image}}')"></div>
            <div class="container custom-block container-break-white container-on-background-image mb-5 pb-3">
                <div class="d-flex flex-row align-items-center justify-content-center post-titles">
                    <h1>{{title}}</h1>
                    {{> primary-author}}
                </div>
                <div class="d-flex flex-row post-excerpt">
                    <div class="resume">
                        {{> post-resume}}
                    </div>
                    <div class="ml-auto actions">
                        {{#has slug=slug tag="short-story-collection"}}
                            {{#foreach tags}}
                                {{^has slug="short-story-collection"}}
                                    {{^has slug="short-story"}}
                                        <p class="text-center">
                                            DÃ©couvrez le recueil :<br />
                                            <a href="{{url}}" class="btn btn-primary btn-block">{{name}}</a>
                                        </p>
                                    {{/has}}
                                {{/has}}<br />
                            {{/foreach}}
                        {{/has}}
                    </div>
                </div>
                <hr class="post-split" />
                <div class="post-content">
                    {{content}}
                </div>
                <div class="post-footer">
                    {{> comment comment_id=comment_id}}
                </div>
            </div>
            <div class="background-fluid-image background-fluid-image-footer" style="background-image: url('{{feature_image}}')"></div>
        </div>
    {{/post}}
</div>
