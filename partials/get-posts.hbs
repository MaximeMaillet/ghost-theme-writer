{{#get "posts" limit=limit order="created_at desc" filter="tags:[chronicles,short-story,novels,theaters,scenarios,articles]" include="authors,tags" as |posts pages|}}
    <div class="article-list">
        {{#foreach posts}}
            <div class="{{post_class}} p-0 article">
                <div class="d-flex flex-row h-100">
                    <div class="article-image" style="background-image: url('{{feature_image}}')"></div>
                    <div class="article-body">
                        <div class="d-flex flex-row align-items-center justify-content-start article-header">
                            {{> primary-author reading-time=true}}
                        </div>
                        <div class="article-title">
                            <h3><a href="{{url}}">{{title}}</a></h3>
                        </div>
                        <div class="article-excerpt">
                            <p>{{excerpt}}</p>
                        </div>
                        <div class="d-flex flex-row mt-1 mb-1 article-tags">
                            {{#foreach tags}}
                                <div class="tag-item {{slug}}">{{name}}</div>
                            {{/foreach}}
                        </div>
                    </div>
                </div>
                <div class="mt-auto article-footer">
                    <a href="{{url}}" class="btn btn-primary btn-block">Lire</a>
                </div>
            </div>
        {{/foreach}}
    </div>
{{/get}}
