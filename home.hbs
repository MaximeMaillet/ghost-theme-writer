{{!< default}}

<div class="container-fluid background-white container-home {{body_class}}">
    <div class="row home-screen" style="background-image: url('{{@site.cover_image}}')">
        <div class="container d-flex flex-column">
            {{navigation class="mt-3 align-items-center justify-content-center home-nav"}}
            <div class="mt-3 d-flex flex-row align-items-center justify-content-center ">
                <div class="logo-door">
                    <a href="{{@site.url}}">
                        <img class="logo-img" src="{{img_url @site.logo size="l"}}" alt="{{@site.title}}" />
                    </a>
                </div>
                <div class="d-flex flex-column home-screen-titles">
                    <h2>{{@site.description}}</h2>
                    <h1>{{@site.title}}</h1>
                </div>
                <div class="ml-auto subscribe-link">
                    <a id="home-screen-button-subscribe" class="btn btn-primary" href="#">Newsletter</a>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="home-presentation">
            <div class="custom-round-block background-white presentation-chronicles">
                <h4>Chroniques</h4>
                {{> get-chronicles }}
            </div>
            <div class="d-flex flex-column presentation-infos">
                <div class="custom-round-block background-white infos-newsletter">
                    <h4>Newsletter</h4>
                    {{> subscribe-form}}
                </div>
                <div class="mt-4 custom-round-block background-white infos-presentation">
                    {{#page}}
                        <h4>{{title}}</h4>
                        <p>{{content}}</p>
                    {{/page}}
                </div>
            </div>
        </div>
        <div class="row home-content">
            <div class="col-md-12 col-lg-12">
                {{> get-posts limit="20" }}
            </div>
        </div>
        <div class="home-footer">
            {{> pub-social-posts }}
        </div>
    </div>
</div>
