{{!< default}}

<div class="container-fluid page-home">
    <div class="container">
        <section id="index-section" class="container-home">
            {{#foreach posts}}
                <article class="{{post_class}} d-flex custom-block">
                    <div class="article-image-first" style="background-image: url('{{feature_image}}')">
                        <!--                    <img src="{{feature_image}}" alt="{{title}}" />-->
                    </div>
                    <div class="article-body">
                        <div class="article-header">
                            <h2><a href="{{url}}">{{title}}</a></h2>
                        </div>
                        <div class="article-excerpt">
                            <p>{{excerpt words="26"}} <a class="read-more" href="{{url}}">...</a></p>
                        </div>
                        <div class="article-footer">
                            <!--                    {{#if primary_author.profile_image}}<img src="{{primary_author.profile_image}}" alt="Author image" />{{/if}}-->
                            <!--                    {{primary_author}}-->
                            <!--                    {{tags prefix=" on "}}-->
                            <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                        </div>
                    </div>
                    <div class="article-image-last" style="background-image: url('{{feature_image}}')">
                        <!--                    <img src="{{feature_image}}" alt="{{title}}" />-->
                    </div>
                </article>
            {{/foreach}}
        </section>
    </div>
</div>

