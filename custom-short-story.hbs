{{!< default}}

{{> header}}

<div class="container-fluid">
{{#post}}
    <div class="post top-icon shorts-story">
        {{> background-fluid background=feature_image lg=true header=true}}
        <div class="container custom-round-block background-white-light container-on-background-image-lg mb-5 pb-3">
            <div class="d-flex flex-row align-items-center justify-content-start post-titles">
                <h1>{{title}}</h1>
                {{> primary-author class="post-author ml-auto"}}
            </div>
            <div class="d-flex flex-row post-excerpt">
                {{> post-resume class="resume"}}
                <div class="ml-auto actions">
                    {{#has slug=slug tag="short-story-collection"}}
                        {{#foreach tags}}
                            {{^has slug="short-story-collection"}}
                                {{^has slug="short-story"}}
                                    <p class="text-center">
                                        DÃ©couvrez le recueil :<br />
                                        <a href="{{url}}" class="btn btn-primary btn-block">{{name}}</a>
                                    </p>
                                {{/has}}
                            {{/has}}<br />
                        {{/foreach}}
                    {{/has}}
                </div>
            </div>
            <hr class="post-split" />
            <div class="post-content">
                {{content}}
            </div>
            <div class="post-footer">
                {{> comment comment_id=comment_id}}
            </div>
            {{> progress-bar }}
        </div>
        {{> background-fluid background=feature_image lg=true footer=true}}
    </div>
{{/post}}
</div>
